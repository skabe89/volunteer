<div class="container">
  <div class="center-align">
    <h1><%= @user.name %></h1>
      <% if !@user.community.nil?%>
        <h3><%= @user.community.location_name %>, <%= @user.state.name %></h3>
      <% end %>
      <%= button_to "Update Location", edit_user_path, method: :get, :class => "btn green lighten-1 white-text"%>
  </div>
  <h3>Upcoming Projects</h3>
  <br>
  <ul>
    <% if !@lead_projects.empty? %>
      <h3><b>Projects You're Leading</b></h3>
      <% @lead_projects.each do |p| %>
      <li>
        <h5><%= link_to p.title, project_path(p) %>
        <%= p.readable_date %></h5>
      </li>  
      <% end %>
    <% end %>
  <br>
  <br>
    <% if @user.pledges %>
      <h3><b>Projects You're Participating In</b></h3>
      <% @user.pledges.each do |p|  %>
        <li>
        <h5><%= link_to p.project.title, project_path(p.project) %>
        <%= p.project.readable_date %> <br>
        <%= p.hours%> hours pledged</h5>
        <%= button_to "Cancel Pledge", pledge_path(p), method: :delete, :class => "btn-small red lighten-1 white-text"%>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>