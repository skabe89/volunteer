<div class="center-align">
  <h1>Update Your Location</h1>
</div>

<div class="container row">
  <div  class="col s8 offset-s2">
  <%= form_for @user do |f| %>
  <h3>State</h3>
    <%= f.collection_select :state_id, State.all, :id, :name, include_blank: "Select State" %>
    <br>
  <h3>Community</h3>
    <%= f.fields_for :community, @user.build_community do |b| %>
      <%= b.label "City or Township" %> <br>
      <%= b.text_field :location %>
    <% end %>
    <br>
    <br>
  <%= f.submit "Update Location", :class => "btn green lighten-1 white-text" %>
  <% end %>
  </div>
</div>

<script>$(document).ready(function(){
    $('select').formSelect();
  });</script>