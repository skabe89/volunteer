<style>
  .div1 {
    border-bottom: 1px solid grey;
  }
</style>

<ul>
  <li>
    <% pledges.each do |pledge| %>
      <div class="div1">
        <%= pledge.user.name %> pledged <%= pledge.hours%> hours <%= pledge.created_at.strftime("- %a %b %d") %> <br>
        <br>
      </div>
      <br>
    <% end %>
  </li>
</ul>